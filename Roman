class Solution {
    public int romanToInt(String s) {
         int result = 0;

        for(int i=0; i<s.length(); i++)
        {
            char c = s.charAt(i);

          
            if ((i != s.length()-1)&& (sv(c) < sv(s.charAt(i+1))))
            {
                result = result - sv(c);
            }else{
                result = result + sv(c);
            }
        }

        return result;
    }

    public int sv(char c)
    {
        switch(c)
        {
            case 'I': return 1;
            case 'V': return 5;
            case 'X': return 10;
            case 'L': return 50;
            case 'C': return 100;
            case 'D': return 500;
            case 'M': return 1000;
        }
        return 0;
        
    }
 
}
